generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cargos {
  id             Int      @id @default(autoincrement())
  cargo          String
  dt_criacao     DateTime @default(now())
  dt_atualizacao DateTime @updatedAt()

  usuarios Usuarios[]

  @@map("cargos")
}

model Usuarios {
  id        String @id @default(uuid())
  nome      String
  sobrenome String
  email     String @unique
  senha     String

  cargoId Int
  cargo   Cargos @relation(fields: [cargoId], references: [id])

  dt_criacao     DateTime @default(now())
  dt_atualizacao DateTime @updatedAt()

  @@map("usuarios")
}

model Servicos {
  id Int @id
  tipo String @unique
  preco Float

  @@map("servicos")
}